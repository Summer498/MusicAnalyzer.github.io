{
  /*
    "extends": [
        "eslint:recommended"
    ],
    */
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "rules": {
    "block-scoped-var": "warn",
    "curly": "warn",
    "init-declarations": ["off", "always"],
    "multiline-ternary": ["warn", "never"],
    "no-lone-blocks": "warn",
    "no-lonely-if": "warn",
    "no-var": "warn",
    "no-void": "warn",
    "no-ex-assign": "warn",
    "no-self-assign": "error",
    "no-cond-assign": "warn",
    "no-func-assign": "warn",
    "no-class-assign": "warn",
    "no-const-assign": "error",
    "no-sequences": "warn",
    "no-multi-assign": "warn",
    "no-global-assign": "warn",
    "no-return-assign":"warn",
    "no-extra-parens": ["warn", "all"],
    "no-unexpected-multiline": "warn",
    "no-unreachable": "warn",
    "one-var": ["warn", "never"],
    "semi": ["error", "always"],
    "switch-colon-spacing":"warn",
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": true
      }
    ],
    "vars-on-top": "warn"
  }
}
